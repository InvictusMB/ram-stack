{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src"
  ]
}
